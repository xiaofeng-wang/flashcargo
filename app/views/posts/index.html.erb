<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Image</th>
      <th>Audio</th>
      <th>Video</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Googleplus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.message %></td>
        <td><%= post.image %></td>
        <td><%= post.audio %></td>
        <td><%= post.video %></td>
        <td><%= post.facebook %></td>
        <td><%= post.twitter %></td>
        <td><%= post.googleplus %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
